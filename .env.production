# Production Environment Configuration

# Database Configuration - This will come from Render environment variables
# DATABASE_URL will be auto-injected by Render

# JWT Secret - Generate a strong random key
JWT_SECRET="your-secure-jwt-secret-key-here"

# LLM API Keys (Optional - for AI triage functionality)
GEMINI_API_KEY="your-gemini-api-key-here"
GROQ_API_KEY="your-groq-api-key-here"

# CORS Configuration - Set this to your Vercel frontend URL
ALLOWED_ORIGINS="https://YOUR-PROJECT-NAME.vercel.app"

# Security Configuration
ALLOWED_HOSTS="*.onrender.com"
FORCE_HTTPS="true"

# Optional: OpenRouter API Key for additional LLM support
OPEN_ROUTER_API_KEY="your-openrouter-api-key-here"

# Production Settings
ENVIRONMENT="production"
DEBUG="false"
LOG_LEVEL="INFO"